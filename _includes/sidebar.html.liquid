<aside class="sidebar" data-sidebar>

    <div class="sidebar-info">

        <figure class="avatar-box">
            <img src="/assets/images/my-avatar.png" alt="Richard hanrick" width="80">
        </figure>

        <div class="info-content">
            <h1 class="name" title="Richard hanrick">Richard hanrick</h1>

            <p class="title">Web developer</p>
        </div>

        <button class="info_more-btn" data-sidebar-btn>
            <span>Show Contacts</span>

            <ion-icon name="chevron-down"></ion-icon>
        </button>

    </div>

    <div class="sidebar-info_more">

        <div class="separator"></div>

        <ul class="contacts-list">

            <li class="contact-item">
                <div class="icon-box">
                    <ion-icon name="mail-outline"></ion-icon>
                </div>
                <div class="contact-info">
                    <p class="contact-title">Email</p>
                    <a href="mailto:{{ site.author.email }}" class="contact-link">{{ site.author.email }}</a>
                </div>
            </li>

            <li class="contact-item">
                <div class="icon-box">
                    <ion-icon name="phone-portrait-outline"></ion-icon>
                </div>
                <div class="contact-info">
                    <p class="contact-title">Phone</p>
                    <a href="tel:{{ site.author.phone }}" class="contact-link">+1 (213) 352-2795</a>
                </div>
            </li>

            <li class="contact-item">

                <div class="icon-box">
                    <ion-icon name="calendar-outline"></ion-icon>
                </div>

                <div class="contact-info">
                    <p class="contact-title">Birthday</p>
                    <time datetime="{{ site.author.birthday }}">{{ site.author.birthday | date_to_string: "ordinal", "US" }}</time>
                </div>

            </li>

            <li class="contact-item">
                <div class="icon-box">
                    <ion-icon name="location-outline"></ion-icon>
                </div>
                <div class="contact-info">
                    <p class="contact-title">Location</p>
                    <address>{{ site.author.location }}</address>
                </div>
            </li>

        </ul>

        <div class="separator"></div>

        <ul class="social-list">
            <li class="social-item">
                <a href="{{ site.author.social.facebook }}" class="social-link" target="_blank">
                    <ion-icon name="logo-facebook"></ion-icon>
                </a>
            </li>
            <li class="social-item">
                <a href="{{ site.author.social.twitter }}" class="social-link" target="_blank">
                    <ion-icon name="logo-twitter"></ion-icon>
                </a>
            </li>
            <li class="social-item">
                <a href="{{ site.author.social.instagram }}" class="social-link" target="_blank">
                    <ion-icon name="logo-instagram"></ion-icon>
                </a>
            </li>
        </ul>
    </div>

</aside>