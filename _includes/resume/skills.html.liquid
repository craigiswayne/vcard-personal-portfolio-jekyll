<section class="skill">
    <h3 class="h3 skills-title">My skills</h3>
    {% if site.data.skills.size > 0 %}
        <ul class="skills-list content-card">
            {% for skill in site.data.skills %}
                <li class="skills-item">
                    <div class="title-wrapper">
                        <h5 class="h5">{{ skill.name }}</h5>
                        <data value="{{ skill.proficiencyPercent }}">{{ skill.proficiencyPercent }}%</data>
                    </div>
                    <div class="skill-progress-bg">
                        <div class="skill-progress-fill" style="width: {{ skill.proficiencyPercent }}%;"></div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p><i>Not found: add your skills into the <code>_data/skills.yml</code> file</i></p>
    {% endif %}
</section>